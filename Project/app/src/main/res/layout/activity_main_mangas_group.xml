<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#303030">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <br.sp.mangaforfun.utils.CapitalizedTextView
                android:id="@+id/textview_mangas_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dragon ball z"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <br.sp.mangaforfun.utils.CapitalizedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="caps:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:allowUndo="false"
                    android:paddingRight="5dp" />

                <br.sp.mangaforfun.utils.CapitalizedTextView
                    android:id="@+id/textview_mangas_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="15sp"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_mangas_corners"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-60dp"
            android:background="@drawable/activity_main_mangas_radius_middle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:contentDescription="popup_group" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6e6c6c"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#838383"/>
</LinearLayout>